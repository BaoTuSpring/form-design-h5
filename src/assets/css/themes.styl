$t3-boxShadow-color = #3f444d;

.theme1 {
  box-shadow: 0px 1px 10px 1px $t1-boxShadow-color;
  width: 94%;
  background: #fff;
  border-radius: 8px;
  margin: 0 3% 20px 3%;
  padding-bottom: 20px;
  overflow: hidden;
}

